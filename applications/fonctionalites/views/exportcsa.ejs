<% include ./../../views/headerConnecte %>

<section class="section">
    <div class="container has-text-centered">
        <div class="columns">

            <div class="column">
                <h2 class="subtitle">Carnets de toute la classe (temp)</h2>
                <a class="box">Exporter le carnet de tous les élèves en PDF</a>
                <a class="box">Exporter le carnet de tous les élèves en PDF <br>
                    (version légère pour impression rapide)</a>
                <a class="box">Export administratif</a>
                <a class="box">Tableau de bord</a>
                <a class="box">Synthèse des acquis</a>
            </div>

            <div class="column">
                <h2 class="subtitle">Voir le carnet de chaque élève :</h2>
                <% if ( typeof listeEleves[0] === 'undefined') { %>
                <h1 class="title is-italic has-text-centered">Vous n'avez pas d'élèves actifs
                    actuellement.</h1>
                <% } else { %>
                <% listeEleves.forEach(eleve => { %>
                <a class="box has-background-grey-lighter" id="<%= eleve.id %>">
                    <%= eleve.nom %>
                </a>
                <% }); %>
                <% } %>
                <hr class="has-background-primary">
                <h2 class="subtitle">Elèves désactivés :</h2>
                <div class="content has-text-justified">
                    <ul>
                        <% if ( typeof listeElevesDesactives[0] === 'undefined') { %>
                        <h3 class="subtitle is-italic has-text-centered">Vous n'avez pas d'élèves
                            inactifs
                            actuellement.
                        </h3>
                        <% } else { %>
                        <% listeElevesDesactives.forEach(eleve => { %>
                        <li id="<%= eleve.id %>">
                            <%= eleve.nom %>
                        </li>
                        <% }); %>
                        <% } %>
                    </ul>
                </div>
            </div>

        </div>
    </div>
</section>


<% include ./../../views/footer %>
