<% if ( connecte ) { %>
<% include ./../views/headerConnecte %>
<% } else { %>
<% include ./../views/header %>
<% } %>

<section class="section container">

    <% messagesFormates.forEach(message => { %>
    <div class="media-content">
        <div class="content">
            <p>
                <strong><%= message.pseudo %></strong>
                <small class="is-italic"><%= message.enregistrement %></small>
                <br>
                <%= message.texteMessage %>
                <br>
            </p>
        </div>
    </div>
    <% }); %>

    <hr class="has-background-primary">
    <% if ( connecte ) { %>
    <div class="field">
        <form method="post" action="/messages">
            <div class="columns is-mobile">
                <input class="input is-font-secondary" type="text" name="texteMessage" placeholder="Quel est votre message ?" required>
                <button class="button is-info" type="submit">
                    Envoyer
                </button>
            </div>
        </form>
    </div>
    <% } else { %>
    <p class="is-italic">
        Vous devez être <a href="/connexion">connecté</a> pour envoyer un message.
    </p>
    <% } %>
</section>

<% include ./../views/footer %>
